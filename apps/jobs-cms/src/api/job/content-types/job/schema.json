{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Job postings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "inactive"],
      "default": "active"
    },
    "salary_range": { "type": "component", "repeatable": false, "component": "jobs.salary-range" },
    "list_card": { "type": "component", "repeatable": false, "component": "jobs.list-card" }
  }
}